# LLM Training Platform Environment Configuration

# Application Settings
APP_NAME=LLM Training Platform
APP_VERSION=1.0.0
APP_DESCRIPTION=A privacy-focused on-premise platform for training and deploying AI agents using your organization's documents.
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_platform
DB_USER=postgres
DB_PASSWORD=your_secure_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_PREFIX=/api/v1
API_CORS_ORIGINS=["http://localhost:3000"]

# Document Storage
DOCUMENT_STORAGE_PATH=/app/documents
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
TEMP_DIR=temp

# OCR Configuration
OCR_ENGINE=tesseract
OCR_LANGUAGES=eng,ara

# Security
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
API_KEY_PREFIX=llm_

# Encryption
ENCRYPTION_MASTER_KEY=your_encryption_master_key_change_this_in_production

# TLS/SSL
SSL_CERT_PATH=/path/to/certificate.pem
SSL_KEY_PATH=/path/to/private_key.pem
SSL_CA_PATH=/path/to/ca_certificate.pem
ENABLE_HTTPS=false

# Logging
LOG_LEVEL=INFO
LOG_ROTATION=10 MB

# Model Training
MODEL_STORAGE_PATH=/app/models
MODEL_CACHE_PATH=/app/cache
MAX_TRAINING_JOBS=2
DEFAULT_BATCH_SIZE=8
DEFAULT_LEARNING_RATE=5e-5

# Vector Database
VECTOR_DB_TYPE=milvus
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530
VECTOR_DB_USER=root
VECTOR_DB_PASSWORD=milvus

# Agent Deployment
MAX_DEPLOYED_AGENTS=5
AGENT_TIMEOUT_SECONDS=30
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_K=50
DEFAULT_TOP_P=0.95

# Admin Dashboard
DASHBOARD_PORT=3000
DASHBOARD_DEBUG=false
